# MediFlow Backend Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://yourdomain.com

# Database Configuration
DB_HOST=your_production_db_host
DB_PORT=5432
DB_NAME=mediflow_production
DB_USER=mediflow_prod
DB_PASSWORD=your_secure_production_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_256_bits_minimum_length_here

# Email Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_smtp_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/mediflow/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_here

# API Configuration
API_TIMEOUT=30000
API_RETRIES=3
API_RETRY_DELAY=1000

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/mediflow.crt
SSL_KEY_PATH=/etc/ssl/private/mediflow.key
